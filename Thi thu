        initComponents();
        setLocationRelativeTo(null);
        loadDaTa();
    }
    public void loadDaTa(){
        try {
        Connection con = DriverManager.getConnection(strDbUrl);
        list.clear();
        Statement st = con.createStatement();
        String sql = "SELECT * FROM NhanVienCS";
        ResultSet rs = st.executeQuery(sql);
            while (rs.next()) {                
                String ma = rs.getString(1);
                String hoten = rs.getString(2);
                String Sdt = rs.getString(3);
                Integer trangthai = rs.getInt(4);
               Student sv = new Student(ma, hoten, Sdt, trangthai);
               list.add(sv);
            }
            con.close();
        } catch (Exception e) {
            System.out.println("Loi ket noi" +e);
        }
       loadDataTable();
    }
    
    public void loadDataTable(){
        DefaultTableModel model = (DefaultTableModel) tbBang.getModel();
        model.setRowCount(0);
        for (Student sv : list) {
            String trangthai = "Nghi viec";
            if (sv.getTrangthai() == 1) {
                trangthai = "Dang lam";
            }
            model.addRow(new Object[]{sv.getMa(), sv.getName(), sv.getSDT(), trangthai});
        }
    }
    
    public void  click(){
        int chon = tbBang.getSelectedRow();
        Student sv = list.get(chon);
        txtMa.setText(sv.getMa());
        txtHoten.setText(sv.getName());
        txtSDT.setText(sv.getSDT());
        int tt = sv.getTrangthai();
        if (tt == 1) {
            rdLam.setSelected(true);
        } else {
            rdNghi.setSelected(true);
        }
    }
    
    public void Update(){
        try {
            if (txtMa.getText().isEmpty() || txtHoten.getText().isEmpty() || buttonGroup1.getSelection() == null || txtSDT.getText().isEmpty()) {
                JOptionPane.showMessageDialog(this, "Ban chua nhap du thong tin??");
            } else {
            Connection con = DriverManager.getConnection(strDbUrl);
            String up = "UPDATE NhanVienCS SET HoTen = ?, SDT = ?, TrangThai = ? WHERE Ma = ?";
            PreparedStatement ps = con.prepareStatement(up);
            ps.setString(1, txtHoten.getText());
            ps.setString(2, txtSDT.getText());
            ps.setString(4, txtMa.getText());
            ps.setInt(3, rdLam.isSelected()?1:2);
            ps.executeUpdate();
            JOptionPane.showMessageDialog(this, "Ban da cap nhat thanh cong!!");
            con.close();
            loadDaTa();
            }
        } catch (Exception e) {
            System.out.println("Loi ket noi?"+e);
        }
    }
